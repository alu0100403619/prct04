def read(mat, fils, cols)
  for i in (0...fils)
    aux = Array.new()
    for j in (0...cols)
      print "mat[#{i}][#{j}]: "
      value = gets
      #mat[i][j] = value.to_i
      aux << value.to_i
    end #for j
    mat << aux
  end #for i
end

def show(mat)
  for i in (0...mat.length)
    for j in (0...mat[0].length)
      print "#{mat[i][j]}  "
    end #for j
    puts ""
  end #for i
end








